public class FinancialDetailsPage {
    public static void main(String[] args) {
        // Simulated user financial details
        String accountNumber = "1234567890";
        double balance = 10000.0;
        List<String> recentTransactions = List.of("Transaction 1: -$500", "Transaction 2: +$1000", "Transaction 3: -$200");

        UserFinancialDetails userFinancialDetails = new UserFinancialDetails(accountNumber, balance, recentTransactions);

        // Display financial details
        System.out.println("User Financial Details:");
        System.out.println("Account Number: " + userFinancialDetails.getAccountNumber());
        System.out.println("Balance: $" + userFinancialDetails.getBalance());
        System.out.println("Recent Transactions:");
        for (String transaction : userFinancialDetails.getRecentTransactions()) {
            System.out.println(transaction);
        }
    }
}
